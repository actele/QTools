{
  "manifest_version": 3,
  "name": "QTools",
  "version": "2.3.0",
  "description": "浏览器端工具：Cookie 抓取、网络请求拦截、数据导出",
  "permissions": [
    "cookies",
    "activeTab",
    "storage",
    "background"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "ui/popup.html",
    "default_title": "QTools"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
